<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eventApp.Controller.StudentController"
            prefWidth="600" prefHeight="450"
            style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <Label text="Student Profile" textFill="WHITE">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <!-- Name -->
            <Label text="Name:" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="nameLabel" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Email -->
            <Label text="Email:" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="emailLabel" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Department -->
            <Label text="Department:" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="departmentLabel" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Semester -->
            <Label text="Semester:" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="semesterLabel" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Interests -->
            <Label text="Interests:" textFill="white" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="interestArea" editable="false" wrapText="true"
                      prefRowCount="3" style="-fx-background-radius: 5; -fx-control-inner-background: #eeeeee;"
                      GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Close"
                style="-fx-background-color: white; -fx-text-fill: #1e3c72; -fx-font-weight: bold; -fx-background-radius: 10;"
                prefWidth="100"/>
    </VBox>
</AnchorPane>