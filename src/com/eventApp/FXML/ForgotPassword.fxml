<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #654ea3, #eaafc8);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventApp.Controller.ForgetPasswordController">

    <children>
        <!-- Decorative Circles -->
        <Circle fill="#ffffff15" layoutX="50" layoutY="100" radius="180" />
        <Circle fill="#ffffff15" layoutX="700" layoutY="80" radius="120" />
        <Circle fill="#ffffff15" layoutX="650" layoutY="500" radius="90" />
        <Circle fill="#ffffff15" layoutX="100" layoutY="450" radius="60" />

        <!-- Footer -->
        <Label alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" opacity="0.9" prefWidth="800.0" text="Â© 2025 Campus Connect | All Rights Reserved" textFill="WHITE" StackPane.alignment="BOTTOM_CENTER">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <!-- Main Card -->
        <HBox alignment="CENTER" spacing="0" StackPane.alignment="CENTER">
            <effect>
                <DropShadow color="#30000055" offsetY="5" radius="15" />
            </effect>

            <!-- Left Panel -->
            <AnchorPane maxHeight="-Infinity" prefHeight="440.0" prefWidth="250.0" style="-fx-background-color: #f5eafc; -fx-background-radius: 15 0 0 15;">
                <children>
                    <Label layoutX="85.0" layoutY="70.0" text="Oops!" textFill="#8e44ad">
                        <font>
                            <Font name="System Bold" size="28.0" />
                        </font>
                    </Label>

                    <Label layoutX="105.0" layoutY="130.0" text="ðŸ˜¥" textFill="#8e44ad">
                        <font>
                            <Font name="Segoe UI Emoji" size="36.0" />
                        </font>
                    </Label>

                    <Label layoutX="40.0" layoutY="200.0" prefHeight="70.0" prefWidth="170.0" text="We'll help you reset your password" textAlignment="CENTER" textFill="#8e44ad" wrapText="true" />

                    <Button layoutX="85.0" layoutY="340.0" mnemonicParsing="false" onAction="#openLoginPage" prefHeight="36.0" prefWidth="80.0" style="-fx-background-color: white; -fx-background-radius: 18; -fx-border-color: #8e44ad; -fx-border-radius: 18; -fx-border-width: 1.5;" text="Back" textFill="#8e44ad">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Button>
                </children>
            </AnchorPane>

            <!-- Right Panel -->
            <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="440.0" prefWidth="350.0" style="-fx-background-color: white; -fx-background-radius: 0 15 15 0;">
                <children>
                    <Label layoutX="30.0" layoutY="50.0" text="Reset Password" textFill="#8e44ad">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Label>

                    <!-- Email -->
                    <Label layoutX="30.0" layoutY="100.0" text="Email:" textFill="#8e44ad">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="emailField" layoutX="30.0" layoutY="120.0" prefHeight="36.0" prefWidth="260.0" style="-fx-background-radius: 6; -fx-border-color: #d3b3e2; -fx-border-radius: 6; -fx-padding: 0 10;" />

                    <!-- New Password -->
                    <Label layoutX="30.0" layoutY="170.0" text="New Password:" textFill="#8e44ad">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" layoutX="30.0" layoutY="190.0" prefHeight="36.0" prefWidth="260.0" style="-fx-background-radius: 6; -fx-border-color: #d3b3e2; -fx-border-radius: 6; -fx-padding: 0 10;" />

                    <!-- Confirm Password -->
                    <Label layoutX="30.0" layoutY="240.0" text="Confirm Password:" textFill="#8e44ad">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="confirmPasswordField" layoutX="30.0" layoutY="260.0" prefHeight="36.0" prefWidth="260.0" style="-fx-background-radius: 6; -fx-border-color: #d3b3e2; -fx-border-radius: 6; -fx-padding: 0 10;" />

                    <!-- Continue -->
                    <Button layoutX="30.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleForgotPassword" prefHeight="40.0" prefWidth="260.0" style="-fx-background-color: #8e44ad; -fx-background-radius: 20; -fx-text-fill: white;" text="Continue">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                        <effect>
                            <DropShadow color="#6a309366" radius="3" />
                        </effect>
                    </Button>
                </children>
            </AnchorPane>
        </HBox>
    </children>
</StackPane>
