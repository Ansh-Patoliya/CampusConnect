<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventApp.Controller.RegistrationController">
   <children>
      <!-- Background with gradient -->
      <Rectangle height="600" style="-fx-fill: linear-gradient(to bottom right, #654ea3, #eaafc8); -fx-opacity: 0.95;" width="900" />

      <!-- Decorative circles -->
      <Circle centerX="100" centerY="100" fill="#ffffff" radius="80" style="-fx-opacity: 0.1;" />
      <Circle centerX="800" centerY="500" fill="#ffffff" radius="120" style="-fx-opacity: 0.1;" />
      <Circle centerX="700" centerY="100" fill="#ffffff" radius="60" style="-fx-opacity: 0.1;" />
      <Circle centerX="200" centerY="450" fill="#ffffff" radius="90" style="-fx-opacity: 0.1;" />

      <!-- Centered Registration Box -->
      <AnchorPane layoutX="225.0" layoutY="50.0" prefHeight="500.0" prefWidth="450.0" style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 2);">

         <!-- Header -->
         <Label alignment="CENTER" layoutX="1.0" layoutY="29.0" prefHeight="50.0" prefWidth="448.0" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-text-fill: #654ea3; -fx-font-weight: bold;" text="Welcome ">
            <font>
               <Font name="Arial Rounded MT Bold" size="24.0" />
            </font>
         </Label>
         <Label alignment="CENTER" layoutX="1.0" layoutY="80.0" prefHeight="20.0" prefWidth="448.0" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-text-fill: #654ea3;" text="to">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <Label alignment="CENTER" layoutX="1.0" layoutY="100.0" prefHeight="50.0" prefWidth="448.0" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-text-fill: #654ea3; -fx-font-weight: bold;" text="Campus Connect">
            <font>
               <Font name="Arial Rounded MT Bold" size="28.0" />
            </font>
         </Label>

         <!-- Form Title -->
         <Label alignment="CENTER" layoutX="1.0" layoutY="150.0" prefHeight="30.0" prefWidth="448.0" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #654ea3; -fx-font-weight: bold;" text="Create Account">
            <font>
               <Font size="20.0" />
            </font>
         </Label>

         <!-- Registration Form -->
         <VBox layoutX="50.0" layoutY="180.0" prefWidth="350.0" spacing="10">
            <children>
               <TextField fx:id="nameField" promptText="Enter name" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
               <TextField fx:id="emailField" promptText="Enter email" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
               <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
               <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />

               <!-- Role Selection -->
               <HBox alignment="CENTER_LEFT" spacing="20">
                  <children>
                     <Label style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #654ea3;" text="Role:" />
                     <RadioButton fx:id="studentRadio" style="-fx-text-fill: #5d326b;" text="Student">
                        <toggleGroup>
                           <ToggleGroup fx:id="RollGroup" />
                        </toggleGroup>
                     </RadioButton>
                     <RadioButton fx:id="clubRadio" style="-fx-text-fill: #5d326b;" text="Club member" toggleGroup="$RollGroup" />
                  </children>
               </HBox>

               <!-- Dynamic Fields (Student) -->
               <AnchorPane fx:id="StudentField" managed="false" visible="false">
                  <children>
                     <TextField fx:id="departmentField" layoutY="0" prefWidth="350.0" promptText="Department" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
                     <TextField fx:id="semesterField" layoutY="40" prefWidth="350.0" promptText="Semester" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
                     <TextField fx:id="enrollmentField" layoutY="80" prefWidth="350.0" promptText="Enrollment No." style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
                  </children>
               </AnchorPane>

               <!-- Dynamic Fields (Club) -->
               <AnchorPane fx:id="ClubField" managed="false" visible="false">
                  <children>
                     <ComboBox fx:id="selectClubField" layoutY="0" prefWidth="350.0" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
                     <TextField fx:id="clubNameField" layoutY="40" prefWidth="350.0" promptText="Club Name" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
                     <TextArea fx:id="descriptionField" layoutY="80" prefWidth="350.0" promptText="Description" style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #d3d3d3; -fx-padding: 8;" />
                  </children>
               </AnchorPane>
            </children>
         </VBox>

         <!-- Buttons -->
         <HBox alignment="CENTER" layoutX="50.0" layoutY="420.0" prefWidth="350.0" spacing="20">
            <Button onAction="#handleRegistration" prefHeight="40.0" prefWidth="165.0" style="-fx-background-color: #654ea3; -fx-background-radius: 6; -fx-text-fill: white; -fx-font-weight: bold;" text="REGISTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button onAction="#openLoginPage" prefHeight="40.0" prefWidth="165.0" style="-fx-background-color: transparent; -fx-text-fill: #654ea3; -fx-border-color: #654ea3; -fx-border-radius: 6; -fx-border-width: 2;" text="CANCEL">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </HBox>

         <!-- Already have account link -->
         <HBox alignment="CENTER" layoutX="1.0" layoutY="470.0" prefHeight="30.0" prefWidth="448.0" spacing="5">
            <Label style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #654ea3;" text="Already have an account?">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Hyperlink onAction="#openLoginPage" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #654ea3; -fx-font-weight: bold;" text="LOGIN">
               <font>
                  <Font size="14.0" />
               </font>
            </Hyperlink>
         </HBox>

         <!-- Footer -->
         <Label alignment="CENTER" layoutX="1.0" layoutY="500.0" prefHeight="20.0" prefWidth="448.0" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #654ea3; -fx-opacity: 0.7;" text="Â© 2025 Campus Connect | All Rights Reserved">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
      </AnchorPane>
   </children>
</AnchorPane>
