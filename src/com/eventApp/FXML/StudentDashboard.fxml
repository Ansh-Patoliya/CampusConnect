<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #654ea3, #eaafc8);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventApp.Controller.StudentDashboardController">
   <children>
      <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <children>
            <VBox alignment="TOP_CENTER" style="-fx-background-color: #f5f5f5; -fx-background-radius: 15;                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);                         -fx-max-width: 800; -fx-max-height: 640;">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-background-color: linear-gradient(to right, #6a3093, #873fa6);                             -fx-background-radius: 15 15 0 0; -fx-padding: 0 25;">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="CampusConnect" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox prefHeight="560.0">
                     <children>
                        <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #5a2d82, #6a3093);                                 -fx-padding: 40 20 20 20;">
                           <children>
                              <Button fx:id="viewEventButton" onAction="#handleViewEvent" maxWidth="Infinity" mnemonicParsing="false"  prefHeight="50.0" style="-fx-background-color: transparent;                                        -fx-border-color: rgba(255,255,255,0.3);                                        -fx-border-radius: 10; -fx-cursor: hand;                                        -fx-font-size: 15;" text="View Events" textFill="WHITE" />
                              <Button fx:id="eventHistoryButton" maxWidth="Infinity" mnemonicParsing="false" prefHeight="50.0" style="-fx-background-color: transparent;                                        -fx-border-color: rgba(255,255,255,0.3);                                        -fx-border-radius: 10; -fx-cursor: hand;                                        -fx-font-size: 15;" text="Event History" textFill="WHITE" />

                              <Button fx:id="" maxWidth="Infinity" mnemonicParsing="false"  prefHeight="50.0" style="-fx-background-color: transparent;                                        -fx-border-color: rgba(255,255,255,0.3);                                        -fx-border-radius: 10; -fx-cursor: hand;                                        -fx-font-size: 15;" text="Cancel My Events" textFill="WHITE" />
                              <Button fx:id="myParticipationButton" maxWidth="Infinity" mnemonicParsing="false" prefHeight="50.0" style="-fx-background-color: transparent;                                        -fx-border-color: rgba(255,255,255,0.3);                                        -fx-border-radius: 10; -fx-cursor: hand;                                        -fx-font-size: 15;" text="My Participation" textFill="WHITE" />
                              <Button fx:id="" maxWidth="Infinity" mnemonicParsing="false" prefHeight="50.0" style="-fx-background-color: transparent;                                        -fx-border-color: rgba(255,255,255,0.3);                                        -fx-border-radius: 10; -fx-cursor: hand;                                        -fx-font-size: 15;" text="View My Profile" textFill="WHITE" />
                         <Button fx:id="cancelMyEventButton" maxWidth="Infinity" mnemonicParsing="false"  prefHeight="50.0" style="-fx-background-color: transparent;                                        -fx-border-color: rgba(255,255,255,0.3);                                        -fx-border-radius: 10; -fx-cursor: hand;                                        -fx-font-size: 15;" text="Cancel My Events" textFill="WHITE" />
                              <Button fx:id="viewMyProfileButton"
                                      text="View My Profile"
                                      onAction="#handleViewProfile"
                                      maxWidth="Infinity"
                                      prefHeight="50.0"
                                      style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10; -fx-cursor: hand; -fx-font-size: 15;" />



                              <Region VBox.vgrow="ALWAYS" />
                              <Button fx:id="backButton" onAction="#onBack" maxWidth="Infinity"  prefHeight="50.0" style="-fx-background-color: #f5f5f5;                                        -fx-background-radius: 10; -fx-cursor: hand;                                        -fx-font-size: 15;                                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="← Back" textFill="#6a3093" />
                           </children>
                        </VBox>
                        <StackPane style="-fx-padding: 60 40;">
                           <children>
                              <VBox alignment="CENTER" spacing="30">
                                 <children>
                                    <VBox alignment="CENTER" spacing="15">
                                       <children>
                                          <Label style="-fx-font-weight: bold;" text="Welcome Student" textFill="#6a3093">
                                             <font>
                                                <Font name="System Bold" size="36.0" />
                                             </font>
                                          </Label>
                                          <Text fill="#6a3093" style="-fx-font-size: 18; -fx-font-style: italic;" text="What’s Happening on Campus? Find Out Here!" textAlignment="CENTER" wrappingWidth="450.0" />
                                       </children>
                                    </VBox>
                                    <VBox alignment="CENTER_LEFT" prefWidth="450.0" spacing="20" style="-fx-background-color: white;                                         -fx-background-radius: 15; -fx-padding: 30;                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                       <children>
                                          <Text fill="#6a3093" fontSmoothingType="LCD" style="-fx-font-weight: bold; -fx-font-size: 20;" text="Quick Actions:" />
                                          <VBox prefWidth="390.0" spacing="12" style="-fx-padding: 15 0 0 20;">
                                             <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                   <children>
                                                      <Circle fill="#873fa6" radius="5" />
                                                      <Text fill="#873fa6" style="-fx-font-size: 16;" text="View latest campus events" />
                                                   </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                   <children>
                                                      <Circle fill="#873fa6" radius="5" />
                                                      <Text fill="#873fa6" style="-fx-font-size: 16;" text="View Event History" />
                                                   </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
