<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eventApp.Controller.AdminViewProfileController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Title Label -->
    <Label layoutX="200" layoutY="30" text="Admin Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Name Label -->
    <Label layoutX="100" layoutY="100" text="Name:" style="-fx-font-size: 16px;"/>
    <Label fx:id="nameLabel" layoutX="200" layoutY="100" text="Loading..." style="-fx-font-size: 16px;"/>

    <!-- Email Label -->
    <Label layoutX="100" layoutY="150" text="Email:" style="-fx-font-size: 16px;"/>
    <Label fx:id="emailLabel" layoutX="200" layoutY="150" text="Loading..." style="-fx-font-size: 16px;"/>

    <!-- Back Button -->
    <Button layoutX="20" onAction="#onBack" layoutY="350" text="Back" />

</AnchorPane>
